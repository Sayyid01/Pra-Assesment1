<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="org.d3ifcool.praasses.HomeFragment"
        android:label="Pra-Assesment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_persegiFragment"
            app:destination="@id/persegiFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit" />
        <action
            android:id="@+id/action_homeFragment_to_segitigaFragment"
            app:destination="@id/segitigaFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3ifcool.praasses.AboutFragment"
        android:label="About" />
    <fragment
        android:id="@+id/persegiFragment"
        android:name="org.d3ifcool.praasses.PersegiFragment"
        android:label="Persegi Panjang"
        tools:layout="@layout/fragment_persegi" />
    <fragment
        android:id="@+id/segitigaFragment"
        android:name="org.d3ifcool.praasses.SegitigaFragment"
        android:label="Segitiga siku-siku"
        tools:layout="@layout/fragment_segitiga" />
</navigation>